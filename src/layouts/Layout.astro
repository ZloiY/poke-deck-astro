---
import '@fontsource/coiny';
import '@fontsource/modak';
import '@fontsource/fredoka';
import { NotificationsPopups } from 'src/components/NotificationPopup';
import { PageLoader } from 'src/components/PageLoader';

export interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en" class="font-fredoka h-full overflow-y-hidden">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body class="bg-purple-500 text-white h-full overflow-y-hidden">
    <main class="flex flex-col h-full w-full justify-center items-center relative bg-purple-500 overflow-y-scroll">
      <PageLoader/>
      <NotificationsPopups client:load />
      <slot />
    </main>
	</body>
</html>
<style is:global>
	:root {
		--accent: 124, 58, 237;
		--accent-gradient: linear-gradient(45deg, rgb(var(--accent)), #da62c4 30%, white 60%);
    --font-coiny: "Coiny";
    --font-modak: "Modak";
    --font-fredoka: "Fredoka";
	}
</style>
